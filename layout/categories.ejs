<h1 id="article-title">
<%
	var pageTitle = '';
	if ( is_post() ) {
		pageTitle = page.slug.split("/")[page.slug.split("/").length-1];
	}else {
		pageTitle = page.title ;
	};
%>
	<%- pageTitle %>
</h1>


<div id="article-content">
            <% for (var j=0; j < site.categories.data.length; j++) { %>
                <% if (site.categories.data[j] && site.categories.data[j].name) { %>
                    <span>
                        <a href="/<%- site.categories.data[j].path %>"><%- site.categories.data[j].name %></a>
						<% if (j < site.categories.data.length - 1) { %>
							>
						<% } %>
                    </span>
                <% } %>
            <% } %>
</div>
